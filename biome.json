{
    "$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
    "organizeImports": {
            "enabled": true
    },
    "linter": {
            "enabled": true,
            "rules": {
                    "all": true,
                    "style": {
                            "useImportType": "off",
                            "noParameterProperties": "off",
                            "useNamingConvention": {
                                    "level": "warn",
                                    "options": {
                                            "strictCase": false
                                    }
                            }
                    },
                    "suspicious": {
                            "noEmptyBlockStatements": "off",
                            "useAwait": "off"
                    },
                    "correctness": {
                            "noUndeclaredVariables": "off"
                    }
            }
    },
    "javascript": {
            "formatter": {
                    "quoteStyle": "single",
                    "jsxQuoteStyle": "single",
                    "bracketSameLine": true
            },
            "parser": {
                    "unsafeParameterDecoratorsEnabled": true
            }
    },
    "json": {
            "parser": {
                    "allowComments": true
            }
    },
    "formatter": {
            "enabled": true,
            "formatWithErrors": true,
            "indentStyle": "tab",
            "indentWidth": 2,
            "lineWidth": 80,
            "lineEnding": "lf",
            "ignore": []
    }
}